package example;

public class Exception1 {

	public static void main(String[] args) {
		int a = 10;
		int b = 5;
		int c = 5;
		int res1 = 0; // declare outside so it's accessible everywhere
		
		try {
			res1 = a / (b - c); // 10 / 0 = error
		} catch (ArithmeticException e1) {
			System.out.println("Can't divide with value zero!");
		}
		
		System.out.println("Result1: " + res1); // will be 0 if exception occurs
		int res2 = a / (b + c); // 10 / 10 = 1
		System.out.println("Result2: " + res2);
	}
}
